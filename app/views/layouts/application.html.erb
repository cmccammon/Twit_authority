<!DOCTYPE html>
<html>
<head>
  <title>AuthTweet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
   <body>
   <%= render 'shared/navigation' %>
    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-3">

        </div>
        <div class="col-xs-9">
          <%= notice %>
          <%= alert %>

          <%= yield %>

          <%= link_to("logout", logout_path, method: :DELETE,  class: 'btn btn-danger btn-xs') if user_logged_in?  %>
        </div>
      </div>
    </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
