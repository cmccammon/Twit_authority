<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.username %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'create new tweet', new_tweet_path(@user), class: 'btn btn-info btn-xs' %>


<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-info btn-xs' %> |
<%= link_to 'Back', users_path, class: 'btn btn-info btn-xs' %>
